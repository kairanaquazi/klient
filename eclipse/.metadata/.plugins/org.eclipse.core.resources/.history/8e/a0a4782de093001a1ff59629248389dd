package testclient.mods;

import net.minecraft.tileentity.TileEntityChest;
import net.minecraft.tileentity.TileEntityEnderChest;
import testclient.main.Catagory;
import testclient.utils.RenderUtils;

public class ChestESP extends Module{

	public ChestESP() {
		super("ChestESP", 0, Catagory.RENDERER);
	}
	
	public void onRender() {
		if(this.isToggled()){
			for(Object o: mc.world.loadedTileEntityList){
				if(o instanceof TileEntityChest){
					RenderUtils.blockESPBox(((TileEntityChest)o).getPos());
				}
				for(o instanceof TileEntityEnderChest){
				     RenderUtils.blockESPBox(((TileEntityEnderChest)o).getPos());
				 }
			}
		}
	}

}