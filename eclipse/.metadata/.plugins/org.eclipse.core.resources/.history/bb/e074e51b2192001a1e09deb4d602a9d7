package testclient.mods;

import org.lwjgl.input.Keyboard;

import testclient.main.Catagory;

public class JumpBoost extends Module{
	public static float flyHackSpeed=0.1f;
	public JumpBoost() {
		super("JumpBoost",Keyboard.KEY_J,Catagory.PLAYER);
	}
	public void onUpdate() {
		if(this.isToggled()) {
			if(mc.gameSettings.keyBindJump.isPressed()) {
				mc.player.motionY*=2;
			}
			if(mc.gameSettings.keyBindSneak.isPressed()) {
				mc.player.capabilities.isFlying=false;
				mc.player.motionY-=0.2;
				mc.player.capabilities.isFlying=true;
			}
			if(mc.gameSettings.keyBindForward.isPressed()) {
				mc.player.capabilities.setFlySpeed(flyHackSpeed);
			}
		}
		super.onUpdate();
	}
	public void onDisable() {
		mc.player.capabilities.isFlying=false;
		super.onDisable();
	}
}
